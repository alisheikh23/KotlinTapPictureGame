<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_blue_light">
    <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:rowCount="3"
            app:columnCount="3"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp">

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture1"
                android:id="@+id/imageView"
                app:layout_column="0"
                app:layout_row="0"
                android:onClick="RightImageTap"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture1"
                android:id="@+id/imageView1"
                app:layout_column="1"
                app:layout_row="0"
                android:onClick="RightImageTap"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture3"
                android:onClick="WrongImageTap"
                android:id="@+id/imageView2"
                app:layout_column="2"
                app:layout_row="0"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture1"
                android:id="@+id/imageView3"
                app:layout_column="0"
                app:layout_row="1"
                android:onClick="RightImageTap"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture3"
                android:onClick="WrongImageTap"
                android:id="@+id/imageView4"
                app:layout_column="1"
                app:layout_row="1"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture1"
                android:id="@+id/imageView5"
                app:layout_column="2"
                android:onClick="RightImageTap"
                app:layout_row="1"/>
        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture1"
                android:onClick="RightImageTap"
                android:id="@+id/imageView6"
                app:layout_column="0"
                app:layout_row="2"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture3"
                android:onClick="WrongImageTap"
                android:id="@+id/imageView7"
                app:layout_column="1"
                app:layout_row="2"/>

        <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/picture3"
                android:onClick="WrongImageTap"
                android:id="@+id/imageView8"
                app:layout_column="2"
                app:layout_row="2"/>


    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: 10"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/TimeText"
            android:minWidth="200dp"
            android:textSize="30sp"
            android:textColor="#1B286B"
            android:background="#59616A96"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout"/>
    <TextView
            android:text="Score: 0"
            android:textColor="#FA6559"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/ScoreText"
            android:background="#512196F3"
            android:textAlignment="center"
            android:minWidth="200dp"
            android:textSize="24sp"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="68dp"
            android:layout_marginBottom="59dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>